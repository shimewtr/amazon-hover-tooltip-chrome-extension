{
  "manifest_version": 3,
  "name": "amazon-hover-tooltip",
  "version": "0.1.0",
  "description": "Show product name tooltip when hovering over Amazon product images",
  "permissions": [],
  "content_scripts": [
    {
      "matches": [
        "https://www.amazon.co.jp/*",
        "https://www.amazon.com/*",
        "https://amazon.co.jp/*",
        "https://amazon.com/*"
      ],
      "js": ["src/content.js"],
      "css": ["src/content.css"],
      "run_at": "document_end"
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
