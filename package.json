{
  "name": "amazon-hover-tooltip",
  "version": "0.1.0",
  "description": "Show product name tooltip when hovering over Amazon product images",
  "scripts": {
    "build:css": "sass src/content.scss dist/content.css --style=compressed",
    "watch:css": "sass src/content.scss dist/content.css --watch --style=compressed",
    "watch:lint": "chokidar 'src/**/*.scss' -c 'npm run lint:css'",
    "dev": "npm run lint:css && npm-run-all --parallel watch:css watch:lint",
    "lint:css": "stylelint 'src/**/*.scss' --fix",
    "install-deps": "npm install"
  },
  "devDependencies": {
    "sass": "^1.69.0",
    "stylelint": "^16.0.0",
    "stylelint-config-standard-scss": "^13.0.0",
    "stylelint-order": "^6.0.0",
    "chokidar-cli": "^3.0.0",
    "npm-run-all": "^4.1.5"
  },
  "author": "Wataru Shime",
  "license": "MIT",
  "private": true
}
